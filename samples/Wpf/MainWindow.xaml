<Window x:Class="Qtl.Samples.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Qtl.Samples.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="921" Width="1536" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Image x:Name="CapturedImage" OpacityMask="Black" Margin="0,0,0,24"/>
        <DockPanel LastChildFill="False" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal">
                <Label x:Name="GpuDescriptionLabel" Content="Unknown"/>
                <Label x:Name="DeviceNameLabel" Content="Unknown"/>
                <Label x:Name="MonitorHandleLabel" Content="Unknown"/>
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
